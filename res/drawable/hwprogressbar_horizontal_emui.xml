<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emui_corner_radius_progressbar" />
            <size android:height="@dimen/hwprogressbar_progress_height" />
            <solid android:color="@color/hwprogressbar_background_color" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/emui_corner_radius_progressbar" />
                <size android:height="@dimen/hwprogressbar_progress_height" />
                <solid android:color="@color/hwprogressbar_secondary_progress_color" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/emui_corner_radius_progressbar" />
                <size android:height="@dimen/hwprogressbar_progress_height" />
                <solid android:color="@color/hwprogressbar_first_progress_color" />
            </shape>
        </scale>
    </item>
</layer-list>